{
  "name": "hapi-paypal",
  "version": "0.0.8",
  "description": "A hapi plugin to interface with PayPal Rest API's and webhooks.",
  "license": "MIT",
  "repository": "https://github.com/trainerbill/hapi-paypal",
  "author": "Andrew Throener",
  "keywords": [
    "HAPI",
    "hapi",
    "PayPal",
    "REST Api",
    "Webhooks",
    "webhooks"
  ],
  "files": [
    "lib"
  ],
  "main": "lib/index.js",
  "typings": "lib/index.d.ts",
  "scripts": {
    "clean": "rimraf lib",
    "lint": "tslint --force --format verbose \"src/**/*.ts\"",
    "build": "npm run clean && npm run lint && echo Using TypeScript && tsc --version && tsc --pretty",
    "test": "nyc --reporter=lcov --require ts-node/register tape test/**/*-spec.ts | tap-spec; nyc report ---reporter=text",
    "watch": "npm run build -- --watch",
    "watch:test": "npm run test -- --watch",
    "release": "npm run build && npm version",
    "release:quick": "npm run build && git add -A && git commit -m 'Quick Release Patch' && npm version patch",
    "postversion": "npm publish",
    "reinstall": "rimraf node_modules package-lock.json && npm install"
  },
  "dependencies": {
    "joi": "^10.6.0",
    "paypal-rest-sdk": "^1.7.1"
  },
  "peerDependencies": {
    "mongoose": "^4.11.3"
  },
  "devDependencies": {
    "@types/blue-tape": "^0.1.31",
    "@types/chai": "^3.0.0",
    "@types/hapi": "^16.1.6",
    "@types/joi": "^10.4.0",
    "@types/mongoose": "^4.7.19",
    "@types/node": "^7.0.0",
    "@types/paypal-rest-sdk": "^1.7.0",
    "@types/sinon": "^2.3.3",
    "@types/tape": "^4.2.30",
    "blue-tape": "^1.0.0",
    "chai": "^3.0.0",
    "coveralls": "^2.0.0",
    "hapi": "^16.4.3",
    "nyc": "^10.0.0",
    "rimraf": "^2.0.0",
    "sinon": "^2.3.8",
    "tap-spec": "^4.1.1",
    "tape": "^4.7.0",
    "ts-node": "^3.0.0",
    "tslint": "^5.0.0",
    "typescript": "^2.0.0"
  },
  "engines": {
    "node": ">=4.0.0"
  },
  "nyc": {
    "include": [
      "src/**/*.ts"
    ],
    "extension": [
      ".ts"
    ]
  }
}
